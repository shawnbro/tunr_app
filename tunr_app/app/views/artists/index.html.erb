<!-- index.html.erb -->
<header>
  <ul>
    <li><a href="/artists/new"> Add Artist </a> </li>
  </ul>
</header>

<h1> Artists </h1>
<ul><% @artists.each do |artist| %>
  <li><%= artist.name %>
    <ul>
      <li><%= artist.genre %></li>
      <li><img src="<%= artist.photo_url %>"> </li>

      <li><a href="/artists/<%= artist.id %>/songs"> See Artist Songs </a> </li>

      <li><a href="/artists/<%= artist.id %>/edit">Edit Artist</a></li>

      <li><form action="/artists/<%= artist.id %>" method="POST" />
        <input type="hidden" name="_method" value="DELETE" />
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
        <button> Delete Artist</button></form>
      </li>
      
    </ul>
    <% end %>
  </ul>
